<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_block"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wp2" >

    <!-- android:background="@color/d168_memu_back" -->

    <RelativeLayout
        android:id="@+id/status_block"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/login_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:background="@drawable/result_red" />

            <TextView
                android:id="@+id/local_user"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:gravity="center|left"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >
            <ImageView
                android:id="@+id/mobile_vpn"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="1dp"
                android:visibility="gone"
                android:background="@drawable/vpn_key2" />
            <ImageView
                android:id="@+id/blt_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_marginTop="1dp"
                android:background="@drawable/blt_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/headset"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="1dp"
                android:background="@drawable/headset"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/vibrator"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="1dp"
                android:background="@drawable/vibration"
                android:visibility="gone" />

            <TextView
                android:id="@+id/network_type"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="0dp"
                android:gravity="right|center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mobile_signal"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="2dp"
                android:background="@drawable/level0"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mobile_data"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="1dp"
                android:background="@drawable/mobile_data"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/signal"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginRight="2dp"
                android:background="@drawable/wifi_0_new" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_margin="0dp"
                android:gravity="right|center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/light"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center|right"
                android:background="@drawable/light"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/top_battery"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/battery3" >
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="345"
                android:textColor="@color/color_white"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/m12time_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="123"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/mute_block"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="17dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/mute_a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="bottom"
                    android:text="@string/label_mute"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="2017-07-31"
                android:textColor="@color/color_white"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/m12time_am2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/time2"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/date2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="28sp"
            android:visibility="invisible" />

        <!-- <include layout="@layout/d168_frag_main_status" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/director"
        android:layout_marginBottom="20dp" >

        <include layout="@layout/d168_frag_main_status_xontel" />
    </LinearLayout>

    <TextView
        android:id="@+id/director"
        android:layout_width="110dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:gravity="center|left"
        android:text="@string/btn_director"
        android:textColor="@color/color_white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="100dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center|right"
        android:text="@string/btn_menu"
        android:textColor="@color/color_white"
        android:textSize="26sp" />

</RelativeLayout>