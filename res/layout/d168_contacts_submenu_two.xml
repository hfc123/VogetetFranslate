<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/styleHead"
        style="@style/style_head"
        android:background="@color/color_white"
        android:text="@string/d168_label_directory" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_wihte" >
       
        <LinearLayout
            android:id="@+id/director_menu_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical" >
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_item_mt"
                android:layout_marginStart="@dimen/d168_contact_menu_leftmargin"
                android:background="@color/d168_contact_sub_back" />

            <RelativeLayout
                android:id="@+id/ldap_two"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/d168_contact_menu_leftmargin"
                    android:text="@string/d168_label_ldap"
                    android:textColor="@color/color_titleblack"
                    android:textSize="@dimen/d168_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/d168_contact_menu_rightmargin"
                    android:background="@drawable/right" />
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_item_mt"
                android:layout_marginStart="@dimen/d168_contact_menu_leftmargin"
                android:background="@color/d168_contact_sub_back" />

            <RelativeLayout
                android:id="@+id/speed_two"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/d168_contact_menu_leftmargin"
                    android:text="@string/d168_label_speed"
                    android:textColor="@color/color_titleblack"
                    android:textSize="@dimen/d168_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/d168_contact_menu_rightmargin"
                    android:background="@drawable/right" />
            </RelativeLayout>            

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_item_mt"
                android:layout_marginStart="@dimen/d168_contact_menu_leftmargin"
                android:background="@color/d168_contact_sub_back" />

            <RelativeLayout
                android:id="@+id/local_director_two"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:background="@color/d168_contact_item_back"
                android:focusable="true" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/d168_contact_menu_leftmargin"
                    android:text="@string/d168_label_localdirectory"
                    android:textColor="@color/color_titleblack"
                    android:textSize="@dimen/d168_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/d168_contact_menu_rightmargin"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_item_mt"
                android:layout_marginStart="@dimen/d168_contact_menu_leftmargin"
                android:background="@color/d168_contact_sub_back" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        style="@style/style_bottom_block" >

        <TextView
            android:id="@+id/left_btn"
            style="@style/style_bottom_left"
            android:paddingLeft="@dimen/d168_contact_menu_rightmargin"
            android:text="@string/bn_soft_left_select" />

        <TextView
            android:id="@+id/right_btn"
            style="@style/style_bottom_right"
            android:paddingRight="@dimen/d168_contact_menu_rightmargin"
            android:text="@string/bn_soft_right_back" />
    </LinearLayout>

</LinearLayout>