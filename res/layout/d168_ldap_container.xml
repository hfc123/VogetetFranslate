<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tab_contact"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:focusable="true"
            android:background="@drawable/back_contactlist"
            android:textColor="@color/d168_main_textcolor"
            android:text="@string/d168_tab_contact" />
        <TextView
            android:id="@+id/tab_group"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:focusable="true"
            android:background="@color/d168_tab_headercolor"
            android:textColor="@color/black333"
            android:text="@string/d168_tab_group" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>