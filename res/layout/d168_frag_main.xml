<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_block"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wp2" >

    <!-- android:background="@color/d168_memu_back" -->

    <RelativeLayout
        android:id="@+id/status_block"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/login_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="5dp"
                android:background="@drawable/result_red" />

            <TextView
                android:id="@+id/local_user"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:gravity="center|start"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp" >
            <!--vpn 图标-->
            <ImageView
                android:id="@+id/mobile_vpn"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="1dp"
                android:visibility="gone"
                android:background="@drawable/vpn_key2" />

            <ImageView
                android:id="@+id/blt_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="1dp"
                android:background="@drawable/blt_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/headset"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="1dp"
                android:background="@drawable/headset"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/vibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginEnd="2dp"
                android:background="@drawable/vibration"            
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_wifi_ap"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="1dp"
                android:background="@drawable/ic_wifi_hot"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/mobile_signal_ext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/network_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="0dp"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/mobile_data"
                    android:layout_width="15dp"
                    android:layout_height="7dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/mobile_data"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/mobile_signal"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="1dp"
                android:background="@drawable/level3" />


            <!-- wifi图标 -->

            <ImageView
                android:id="@+id/signal"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginEnd="2dp"
                android:background="@drawable/wifi_0_new"
                android:visibility="gone" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="end|center"
                android:layout_margin="0dp"
                android:gravity="end|center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/light"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center|end"
                android:background="@drawable/light"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/top_battery"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/battery3" >
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/time_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/hd2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/hd2_flag"
                android:textColor="@color/color_white"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/m12time_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/mute_block"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="120dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/mute_a" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="2017-07-31"
                android:textColor="@color/color_white"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/m12time_am2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/time2"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_user"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/login_status_2"
                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ok"
                android:visibility="gone" />

            <TextView
                android:id="@+id/local_user_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="2dp"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="26sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/date2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="28sp"
            android:visibility="gone" />

        <include layout="@layout/d168_frag_main_status" />
        <!-- android:background="@color/d168_memu_back" /> -->

    </LinearLayout>

    <TextView
        android:id="@+id/director"
        android:layout_width="150dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:gravity="center|start"
        android:text="@string/btn_director"
        android:textColor="@color/color_white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="150dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|end"
        android:text="@string/btn_menu"
        android:textColor="@color/color_white"
        android:textSize="26sp" />

</RelativeLayout>