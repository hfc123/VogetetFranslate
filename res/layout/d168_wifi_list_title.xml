<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/conn_info_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#cccccc"
        android:gravity="center|left"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:text="@string/conn_info_label"
        android:textColor="@color/color_black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/conn_info_block"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/conn_info_label"
        android:gravity="center" >

        <TextView
            android:id="@+id/wifi_list_item_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:gravity="left|center"
            android:marqueeRepeatLimit="2"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/wifi_list_lock"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/locked_2" />

        <ImageView
            android:id="@+id/wifi_list_item_level"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/wifi_icon_wifi_3_2" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="20dp"
        	android:layout_height="24dp"
            android:background="@drawable/wifi_more" />
    </LinearLayout>

</RelativeLayout>