<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center"
    android:background="@color/color_dark_greybg"
    android:paddingBottom="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/send_status"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="right"
        android:text="@string/d168_tip_msg_recv"
        android:textColor="@color/color_text3"
        android:textSize="18sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/content_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bg2"
        android:gravity="center|right"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="18dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/color_titleblack"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/send_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/color_text3"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>