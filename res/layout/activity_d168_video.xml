<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_video_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_3"
        android:visibility="gone"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_video_call_info"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/d168_call_second_bg"
            android:visibility="visible" >

            <com.wecomm.d168.component.CircleImageView
                android:id="@+id/call_icon_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/call_icon1" />

            <TextView
                android:id="@+id/tv_video_call_info_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/call_icon_2"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/color_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_video_call_info_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_video_call_info_name_2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/call_icon_2"
                android:singleLine="true"
                android:text="123456"
                android:textColor="@color/color_white"
                android:textSize="24sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/tv_video_call_info_period_2"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    android:text="00:00:00"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_video_call_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_3"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="gone" >

        <FrameLayout
            android:id="@+id/fl_video_call_info"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.wecomm.d168.component.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/call_icon1" />

        <TextView
            android:id="@+id/tv_video_call_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/color_white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_video_call_info_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:singleLine="true"
            android:text="number"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_video_call_info_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="state"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_video_call_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="24sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/tv_video_call_info_state_block"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_video_call_info_mute"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/mute_in_call"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>