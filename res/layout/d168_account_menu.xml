<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d168_memu_back" >

    <ImageView
        android:id="@+id/feature_icon"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/account" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feature_icon"
        android:layout_margin="29dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:text="@string/btn_account" />

    <LinearLayout
        style="@style/style_bottom_block"
        android:layout_alignParentBottom="true"
        android:background="@color/color_transparent" >

        <TextView
            style="@style/style_bottom_left"
            android:text="@string/btn_select"/>

        <TextView
            style="@style/style_bottom_right"
            android:text="@string/btn_back"/>
    </LinearLayout>

</RelativeLayout>