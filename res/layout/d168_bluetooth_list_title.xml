<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_block"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/match_info_label"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#cccccc"
        android:gravity="center|left"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:text="@string/d168_bluetooth_linked"
        android:textColor="@color/color_black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/match_info_block"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/match_info_label"
        android:gravity="center" >

        <TextView
            android:id="@+id/bluetooth_list_item_name"
            android:layout_width="255dp"
            android:layout_height="35dp"
            android:gravity="left|center"
            android:marqueeRepeatLimit="2"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="24dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/wifi_more" />
    </LinearLayout>

</RelativeLayout>