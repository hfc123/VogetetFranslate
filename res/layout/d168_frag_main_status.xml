<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <!-- android:background="@color/d168_memu_back" -->

    <TextView
        android:id="@+id/label_no_service"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="@string/label_no_service"
        android:textColor="@color/color_white"
        android:textSize="26sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label_network"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:gravity="center"
        android:text="@string/label_network_tip"
        android:textColor="@color/color_white"
        android:textSize="26sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >
<!--
            <LinearLayout
                android:id="@+id/mute_block"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:background="@drawable/mute_a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/label_mute"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:textSize="24sp" />
            </LinearLayout>
 -->
            <LinearLayout
                android:id="@+id/dnd_block"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/label_dnd"
                    android:textColor="@color/color_white"
                    android:layout_gravity="center"
                    android:textSize="24sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/change_block"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/change_icon"
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/call_missed" />

            <TextView
                android:id="@+id/change_tip_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:text="10"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/change_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/d168_tip_misscall"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/li_checkUpdate"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/dnd"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/d168_tip_update_system"
            android:textColor="@color/color_white"
            android:textSize="24sp" />
    </LinearLayout>
    

</FrameLayout>