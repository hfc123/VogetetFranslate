<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:focusable="true"
    android:background="@color/color_white"
    android:padding="5dp" >

    <ImageView 
        android:id="@+id/caller_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/n_image_icon4"/>
    
    
    <TextView
        android:id="@+id/caller_num"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_toRightOf="@id/caller_icon"
        android:gravity="center|left"
        android:text=""
        android:textColor="@color/color_text1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/bottom_block"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/caller_num"
        android:layout_toRightOf="@id/caller_icon"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/call_state"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/color_text1"
            android:textSize="@dimen/d168_bottom_font_size"/>

        <TextView
            android:id="@+id/call_account"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_text1"
            android:textSize="@dimen/d168_bottom_font_size" />
    </RelativeLayout>

</RelativeLayout>