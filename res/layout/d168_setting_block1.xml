<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@color/color_greybg"
    android:visibility="visible">

    <TextView
        android:id="@+id/domain_proxy_label"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="bottom|left"
        android:text="@string/label_domain_proxy"
        android:textColor="@color/color_text_setting1"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/block3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/domain_proxy_label"
        android:layout_marginTop="0.5dp"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/label2"
            android:layout_width="@dimen/setting_label_w"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="@string/label_domain"
            android:textColor="@color/color_text_setting1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/domain"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/label2"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/color_black"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>