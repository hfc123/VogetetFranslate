<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d168_tab_headercolor" >

    <TextView
        android:id="@+id/left_btn"
        android:layout_width="100dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:background="@color/d168_contact_bottom"
        android:gravity="center|left"
        android:text="@string/d168_btn_select"
        android:textColor="@color/color_white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="120dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/d168_contact_bottom"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/right_btn"
        android:layout_width="100dp"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/d168_contact_bottom"
        android:gravity="center|right"
        android:text="@string/btn_back"
        android:textColor="@color/color_white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d168_bottom_h"
        android:layout_below="@id/contact_label"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/d168_contact_editext_bg"
        android:padding="7dp"
        android:singleLine="true"
        android:textColor="@color/color_text1"
        android:textSize="24sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/right_btn"
        android:layout_below="@id/search"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:focusable="true" >
    </ListView>

    <RelativeLayout
        android:id="@+id/option_block"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/left_btn"
        android:background="@color/d168_color_greybg_tran"
        android:gravity="bottom"
        android:padding="2dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/option_members"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:focusable="true"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/d168_btn_members"
                android:textColor="@color/color_text1"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_greybg" />

            <TextView
                android:id="@+id/option_edit"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:focusable="true"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:text="@string/d168_btn_edit"
                android:textColor="@color/color_text1"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_greybg" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tip"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/tip_contact_searching"
        android:textColor="@color/color_text3"
        android:textSize="26sp"
        android:visibility="gone" />

</RelativeLayout>