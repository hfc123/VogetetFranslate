<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@color/color_greybg"
    android:layout_below="@id/block1">

    <TextView
        android:id="@+id/detail_label"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="bottom|left"
        android:text="@string/label_user_details"
        android:textColor="@color/color_text_setting1"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/block2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/detail_label"
        android:layout_marginTop="0.5dp"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/label1"
            android:layout_width="@dimen/setting_label_w"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="@string/label_account_id"
            android:textColor="@color/color_text_setting1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/usernum"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/label1"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/color_black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/block2"
        android:layout_marginTop="0.5dp"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/label3"
            android:layout_width="@dimen/setting_label_w"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="@string/label_passwd"
            android:textColor="@color/color_text_setting1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/label3"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/color_black"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/block4"
        android:layout_marginTop="0.5dp"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/label4"
            android:layout_width="@dimen/setting_label_w"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="@string/label_authID"
            android:textColor="@color/color_text_setting1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/authID"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/label4"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="@color/color_black"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>