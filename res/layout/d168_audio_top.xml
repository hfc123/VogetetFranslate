<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/login_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="5dp"
            android:background="@drawable/result_red" />

        <TextView
            android:id="@+id/local_user"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:gravity="center|left"
            android:maxWidth="120dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp" >

        <TextView
            android:id="@+id/pin_sign"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/locked"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="2dp"
            android:src="@drawable/locked_3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/blt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="1dp"
            android:background="@drawable/blt_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/vibrator"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginRight="1dp"
            android:background="@drawable/vibration"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/headset"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginRight="3dp"
            android:background="@drawable/headset"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/speaker"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center|left"
            android:src="@drawable/speaker_on"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="0dp"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mobile_data"
                android:layout_width="15dp"
                android:layout_height="7dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/mobile_data"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mobile_signal"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginRight="2dp"
            android:background="@drawable/level3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/signal"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginRight="2dp"
            android:background="@drawable/wifi_0_new" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_margin="0dp"
            android:gravity="right|center"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/light"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:background="@drawable/light"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/top_battery"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="@drawable/battery3" >
        </FrameLayout>

        <TextView
            android:id="@+id/curr_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>