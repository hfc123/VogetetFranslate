            <LinearLayout
                android:id="@+id/system_tools"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/label_system_tools"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_w"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

            <!-- 网速测试 -->

            <LinearLayout
                android:id="@+id/inter_speed"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/inter_speed"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_w"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        style="@style/style_bottom_block" >

        <TextView
            android:id="@+id/left_btn"
            style="@style/style_bottom_left"
            android:text="@string/bn_soft_left_select" />

        <TextView
            android:id="@+id/right_btn"
            style="@style/style_bottom_right"
            android:text="@string/bn_soft_right_back" />
    </LinearLayout>

</LinearLayout>