<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_grey"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/styleHead"
        style="@style/style_head"
        android:background="@color/d168_tab_headercolor"
        android:text="@string/advanced" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/d168_contact_sub_back" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/label_account"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_h"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/media"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/title_media"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_h"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vpn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/vpn"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_h"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wlan"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/d168_network_wlan"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_h"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bluetooth"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/d168_contact_menu_item_h"
                android:layout_marginTop="@dimen/contact_item_mt"
                android:background="@color/d168_contact_item_back"
                android:focusable="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="@dimen/d168_contact_menu_item_h"
                    android:focusable="true"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="@string/d168_bluetooth"
                    android:textColor="@color/black333"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="@dimen/d168_contact_menu_item_more_w"
                    android:layout_height="@dimen/d168_contact_menu_item_more_h"
                    android:layout_gravity="right|center"
                    android:background="@drawable/wifi_more" />
            </LinearLayout>

