<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_list_item"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/wifi_list_item_name"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="2"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black333"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:background="@drawable/wifi_more" />

    <ImageView
        android:id="@+id/wifi_list_item_level"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/right_icon"
        android:src="@drawable/wifi_icon_1" />

    <ImageView
        android:id="@+id/wifi_list_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/wifi_list_item_level"
        android:background="@drawable/locked" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:background="@color/graye1e1e1" />

</RelativeLayout>