<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/styleHead"
        style="@style/style_head"
        android:text="@string/label_about" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/about_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/account_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_account"
                    android:textColor="@color/gray999"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sip1_linearLayout"
                style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_sip1" />

                <com.wecomm.d168.component.MarqueeTextView
                    android:id="@+id/sip1_account"
                    style="@style/style_tv2"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sip1_status_linearLayout"
                style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_status" />

                <TextView
                    android:id="@+id/sip1_status"
                    style="@style/style_tv2"
                    android:text="@string/label_unused" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sip2_linearLayout"
                style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_sip2" />

                <com.wecomm.d168.component.MarqueeTextView
                    android:id="@+id/sip2_account"
                    style="@style/style_tv2"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sip2_status_linearLayout"
                style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_status" />

                <TextView
                    android:id="@+id/sip2_status"
                    style="@style/style_tv2"
                    android:text="@string/label_unused" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_network"
                    android:textColor="@color/gray999"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_ip" />

                <TextView
                    android:id="@+id/ip_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_gateway" />

                <TextView
                    android:id="@+id/gw_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_dns1" />

                <TextView
                    android:id="@+id/dns_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_dns2" />

                <TextView
                    android:id="@+id/dns2_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_mac" />

                <TextView
                    android:id="@+id/mac_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>
            
            <!-- IMEI -->
            <LinearLayout
                android:id="@+id/linearLayout_imei"
                style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_imei" />

                <TextView
                    android:id="@+id/imei_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <!-- SIM -->
            <LinearLayout
                android:id="@+id/linearLayout_sim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="SIM"
                    android:textColor="@color/gray999"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_rssi"
                style="@style/style_linear_layout" >

                <TextView
                    android:id="@+id/sim_signal_strength"
                    style="@style/style_tv"
                    android:text="RSSI:" />

                <TextView
                    android:id="@+id/sim_strength_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <!-- VPN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="VPN"
                    android:textColor="@color/gray999"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    android:id="@+id/vpn_status"
                    style="@style/style_tv"
                    android:text="@string/label_status" />

                <TextView
                    android:id="@+id/vpn_content"
                    style="@style/style_tv2"
                    android:text="Unused" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/label_phone"
                    android:textColor="@color/gray999"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_model" />

                <TextView
                    android:id="@+id/model_content"
                    style="@style/style_tv2"
                    android:text="@string/label_modelname" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_app" />

                <TextView
                    android:id="@+id/version_content"
                    style="@style/style_tv2"
                    android:text="" />
            </LinearLayout>

            <LinearLayout style="@style/style_linear_layout" >

                <TextView
                    style="@style/style_tv"
                    android:text="@string/label_system" />

                <TextView
                    android:id="@+id/system_content"
                    style="@style/style_tv2"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        style="@style/style_bottom_block" >

        <TextView
            android:id="@+id/right_btn"
            style="@style/style_bottom_right"
            android:text="@string/bn_soft_right_back" />
    </LinearLayout>

</LinearLayout>